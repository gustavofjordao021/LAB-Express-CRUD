<h1>Edit task: {{this.title}}</h1>
<form class="" action="/form-input/{{this._id}}/task-update" method="post">
  <label for="titleInput">Title</label>
  <input id="titleInput" type="text" name="title" value="{{this.title}}" placeholder="Clean House">
  <label for="descriptionInput">Description</label>
  <input id="desriptionInput" type="text" name="description" value="{{this.description}}" placeholder="In-laws are comign over!">
  <label for="priorityInput">Priority</label>
  <input id="priorityInput" type="text" name="priority" value="{{this.priority}}" placeholder="5">
  <button>Update task</button>
</form>